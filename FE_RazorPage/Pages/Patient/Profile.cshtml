
@page
@model PatientProfileModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="shadow-lg rounded overflow-hidden" style="min-width: 800px;">

        <!-- Header full width -->
        <div class="bg-primary bg-opacity-75 text-white text-center py-4">
            <h2 class="m-0">Thông tin cá nhân</h2>
        </div>

        <!-- Body form -->
        <div class="bg-light p-5">
            @if (Model.SuccessMessage != null)
            {
                <div class="alert alert-success text-center">@Model.SuccessMessage</div>
            }
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger border border-danger shadow-sm rounded p-2 mb-3 text-sm text-danger bg-light">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }


            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Họ</label>
                        <input asp-for="Profile.FirstName" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Tên</label>
                        <input asp-for="Profile.LastName" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Ngày sinh</label>
                        <input asp-for="Profile.Dob" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Giới tính</label>
                        <select asp-for="Profile.Gender" class="form-select">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        <input asp-for="Profile.Phone" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Địa chỉ</label>
                        <input asp-for="Profile.Address" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Mã bảo hiểm</label>
                        <input asp-for="Profile.InsuranceNumber" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input asp-for="Profile.Email" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên đăng nhập</label>
                    <input asp-for="Profile.Username" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-4">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
