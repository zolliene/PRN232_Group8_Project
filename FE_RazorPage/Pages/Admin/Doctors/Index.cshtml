@page
@model FE_RazorPage.Pages.Admin.Doctors.IndexModel
@{
    ViewData["Title"] = "Danh sách bác sĩ";
}

<h2>Danh sách bác sĩ</h2>

<a asp-page="Create" class="btn btn-success mb-3">Thêm bác sĩ</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Chuyên môn</th>
            <th>Giấy phép</th>
            <th>Ngày cấp</th>
            <th>Hạn giấy phép</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctors)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Email</td>
                <td>@doctor.Qualification</td>
                <td>@doctor.LicenseNumber</td>
                <td>@doctor.DateOfLicense</td>
                <td>@doctor.LicenseExpiryDate</td>
                <td>@(doctor.IsActive == true ? "Hoạt động" : "Tạm khóa")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@doctor.Id" class="btn btn-sm btn-primary">Sửa</a>


                    <a asp-page="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-danger">Xóa</a>

                </td>
            </tr>
        }
    </tbody>
</table>