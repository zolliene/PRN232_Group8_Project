@page "{id:int}"
@model FE_RazorPage.Pages.Admin.Doctors.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa bác sĩ";
}

<h2>Chỉnh sửa thông tin bác sĩ</h2>

<form method="post">
    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Doctor.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Doctor.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Chuyên môn</label>
        <input asp-for="Doctor.Qualification" class="form-control" />
    </div>
    <div class="form-group">
        <label>Giấy phép</label>
        <input asp-for="Doctor.LicenseNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày cấp</label>
        <input asp-for="Doctor.DateOfLicense" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Hạn giấy phép</label>
        <input asp-for="Doctor.LicenseExpiryDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>
