@page 
@model FE_RazorPage.Pages.Admin.RegimenDrugs.DeleteModel
@{
    ViewData["Title"] = "Xoá thuốc";
}

<h2>Bạn có chắc chắn muốn xoá thuốc này?</h2>

<p><strong>@Model.DrugName</strong></p>
<p>Liều lượng: @Model.Dose</p>
<p>Số lần dùng: @Model.Frequency</p>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RegimenId" />
    <button type="submit" class="btn btn-danger">🗑️ Xoá</button>
    <a asp-page="Index" asp-route-RegimenId="@Model.RegimenId" class="btn btn-secondary">↩️ Huỷ</a>
</form>
